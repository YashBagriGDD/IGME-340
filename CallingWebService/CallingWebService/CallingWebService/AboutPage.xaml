<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CallingWebService.AboutPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Studio Locator" Style="{StaticResource Key=AboutStyle}" FontSize="50" FontAttributes="Bold"/>
            <Label Text="App by Yash Bagri" Style="{StaticResource Key=AboutStyle}"/>
            <Label Text="&#169;2020" Style="{StaticResource Key=AboutStyle}" />
            <Label Text="Privacy policy" Style="{StaticResource Key=AboutStyle}" FontAttributes="Italic">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OpenPrivacy" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>